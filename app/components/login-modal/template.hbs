<div class="modal fade bd-example-modal-sm login-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="panel-padding panel-body">
        <div class="container">
          <button {{action "signInViaFacebook"}} type="submit" class="btn btn-block btn-primary btn.fb">{{fa-icon "facebook"}} Log in with Facebook 
          </button>
          <div class="signup-or-separator">
            <span class="h6 signup-or-separtor--text">or</span>
            <hr>  
          </div>
          {{#if errorFlashMessage}}
          <div class="alert alert-danger" role="alert">
            {{errorFlashMessage}}
          </div>
          {{/if}}
          <form {{action "submitAuthentication" on="submit"}}>
            <div class="form-group input-group {{if emailError "has-error"}}">
              <span class="input-group-addon">{{fa-icon "envelope"}}</span>
              {{input class="form-control" value=email placeholder="Email"}}
            </div>
            <div class="form-group input-group {{if passwordError "has-error"}}">
              <span class="input-group-addon"><span>{{fa-icon "unlock-alt"}}</span></span>
              {{input class="form-control" value=password type="password" placeholder="Password"}}
            </div>
            <div class="form-group">
              <button {{action "submitAuthentication"}} type="submit" class="btn btn-danger btn-block">Log In</button>
            </div>
            <hr>
            <div class="modal-font">
              <span class="pull-left">Don't have an account?</span>
              <span class="register-link"><a {{action "switchToRegister"}}>Register</a></span>
            </div>
          </form>
        </div>

      </div>
    </div>
  </div>
</div>
